extends ../layout/authLayout 
include ../mixins/title

block content 
  +title(title, "/")
  if errorMsg
    .errorMsg=errorMsg

  form(method="POST")
    .label 이메일
    input.coco-form(name="email" id="email" placeholder="Email" type="email", 
      required value=email autofocus)

    .label 비밀번호
    input.coco-form(name="password" id="password" placeholder="Password" 
      type="password", required, minLength="4" maxLength="15" autocomplete="new-password")

    button.button(type="submit") 
      span.button-back 
      span.button-front Log In