extends ../layout/authLayout 
include ../mixins/title

block content 
  if errorMsg
    .errorMsg=errorMsg
  div.form-contianer
    form(method="POST")
      .label ID
      input.coco-form(name="memberId" id="memberId" placeholder="ID" type="text", 
        required value=memberId autofocus)

      .label Password
      input.coco-form(name="password" id="password" placeholder="Password" 
        type="password", required, minLength="4" maxLength="15" autocomplete="new-password")

      div.button-section
        button.button(type="submit") 
          span.button-back 
          span.button-front Log In 

    div.login-admire
      span 아직 계정이 없다면? 
      a(href="/auth/join") 회원가입